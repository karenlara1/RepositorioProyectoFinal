<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.proyectofinal.viewController.MuroViewController">
    <!-- Barra de Navegación -->
    <HBox prefHeight="60" prefWidth="600" spacing="20" layoutX="20" layoutY="20">
        <Button text="Perfil" fx:id="btnPerfil" />
        <Button text="Mis Productos" fx:id="btnMisProductos" />
        <Button text="Agregar Producto" fx:id="btnAgregarProducto" />
        <Button text="Cerrar Sesión" fx:id="btnCerrarSesion" />
    </HBox>

    <!-- Muro de Productos -->
    <VBox spacing="20" layoutX="20" layoutY="100">
        <!-- Titulo de los productos -->
        <Label text="Mis Productos" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <!-- Lista de Productos -->
        <GridPane fx:id="gridProductos" hgap="10" vgap="10" layoutY="50">
            <!-- Aquí irían los productos dinámicamente -->
        </GridPane>
    </VBox>

    <!-- Formulario de Agregar Producto -->
    <VBox spacing="15" layoutX="400" layoutY="100" visible="false" fx:id="formAgregarProducto">
        <TextField fx:id="txtNombreProducto" promptText="Nombre del Producto" />
        <TextArea fx:id="txtDescripcionProducto" promptText="Descripción" />
        <TextField fx:id="txtPrecioProducto" promptText="Precio" />
        <Button text="Seleccionar Imagen" fx:id="btnSeleccionarImagen" />
        <Button text="Agregar Producto" fx:id="btnAgregar" />
    </VBox>
</AnchorPane>

